<table class="table table-striped" id="overall_mentorings_dtable">
	<thead>
		<tr>
			<th colspan="1"></th>
			<th colspan="4"><center>Avg Scores in Lesson Plan Indicator</center></th>
			<th colspan="4"><center>Average</center></th>
			<th colspan="1"></th>
		</tr>
		<tr>
			<th>District</th>
			<th><center>One</center></th>
			<th><center>Two</center></th>
			<th><center>Three</center></th>
			<th><center>Four</center></th>
			<th><center># of Students Present from Nursery to Grade 5</center></th>
			<th><center>Teacher Count</center></th>
			<th><center>Tasks Completed by Head Teacher</center></th>
			<th><center>Report Cards Issued by Schools</center></th>
			<th><center>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% for district in @districts %>
			<tr>
				<td><%= district.district_name.titleize%> </td>
				<td class="center"> 
					<%= district.score_indicator1_average %> 
				</td>
				<td class="center"> 
					<%= district.score_indicator2_average %> 
				</td>						
				<td class="center"> 
					<%= district.score_indicator3_average %> 
				</td>
				<td class="center"> 
					<%= district.score_indicator4_average %> 
				</td>
				<td class="center"> 
					<%= district.students_present_average %> 
				</td>					
				<td class="center"> 
					<%= district.teachers_present_m_average  %>
				</td>
				<td class="center"> 
					<%= district.tasks_completed_average %> %
				</td>
				<td class="center"> 
					<%= district.report_cards_issued_average.to_s.concat('%') %>
				</td>
				<td class="center">
				<% if can? :view_indicators_reports, district %>
					<%= link_to "View Details", indicators_report_district_path(district), :class => 'btn' %>
				<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<br/>