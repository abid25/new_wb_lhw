<div class="page-header"> <h1> <%= @province.name %> <div id="visualization_type" class="pull-right" style="font-weight:normal; font-size:27px;">Barchart - Students Appearing for Paper in Grade 3</div></h1> </div>

<%= render  :partial => 'partials/indicator_controls', :locals => { :parent => nil} %>

	<div class="alert alert-info fade in" data-alert="alert">
		<a class="close" data-dismiss='alert' href="#">x</a>
		<div id="help_bar">
			This chart displays a <strong>snap-shot view</strong> of the <strong>average number of Students appearing for a paper in Grade 3</strong> for each district of the province. 
		</div>
	</div>
	
	<div class="chart_panel" id='visualization_area'>
		<div id="loading2" class="loading"><h2>Loading Please Wait</h2>  <%= image_tag("large-spinner.gif", :alt => "Loading....") %></div>		
	</div>
	
<br/>
<hr>


<script type="text/javascript">
	
	preloading_functions["barchart"] = function()
	{
		<%= render_chart_define_chart indicator_barchart(@districts,@indicators[0],'auto',700), 'visualization_area'%>
	}
	
	<% for indicator in @indicators %>
		loading_functions["<%=indicator.hook%>"] = function()
		{
			<%= render_chart_with_transition indicator_barchart(@districts,indicator,'auto',700), 'visualization_area' %>
		}
	<% end %>
	
</script>