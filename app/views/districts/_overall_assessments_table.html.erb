<table class="table table-striped" id="overall_assessments_dtable">
	<thead>
	<tr>
		<th colspan="1"></th>
		<th colspan="3"><center>Average Number of Students Appearing in Paper</center></th>
		<th colspan="1"></th>
		<th colspan="1"></th>
		<th colspan="1"></th>
	</tr>
	<tr>
		<th>District</th>
		<th><center>Grade-3</center></th>
		<th><center>Grade-4</center></th>
		<th><center>Grade-5 </center></th>
		<th><center>Average Teacher Count</center></th>
		<th><center>Average Tasks Identfied for Cooperation of HT</center></th>
		<th><center>Actions</th>
	</tr>
			</thead>
			<tbody>
				<% for district in @districts %>
					<tr>
						<td><%= district.district_name.titleize%> </td>
						<td class="center"> 
							<%=  district.students_grade3_average %> 
						</td>
						<td class="center"> 
							<%=  district.students_grade4_average  %>
						</td>						
						<td class="center"> 
							<%=  district.students_grade5_average  %>
						</td>
						<td class="center"> 
							<%= district.teachers_present_average %> 
						</td>
						<td class="center"> 
							<%= district.tasks_identified_average %> 
						</td>
						<td class="center">
						<% if can? :view_school_reports, district %>
							<%= link_to "View Details", school_report_district_path(district), :class => 'btn' %> 
						<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
</table>