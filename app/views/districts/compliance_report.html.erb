<div class="page-header"> <h1>Compliance Report <small> - <%= @district.district_name.capitalize %></small> </h1> </div>
<br/>

<legend>Activity Table</legend>
<%= simple_form_for :time_filter, :remote => true, :html => {:"data-spinner" => "#time_filter_spinner"} do |f| %>
	<div class="inputs">
		<div class="row">
		<%=f.hidden_field :id, :value => @district.district_name %>
			<center> From: <%= f.text_field :start_time, :value=>Time.now.prev_month.beginning_of_month.strftime("%d-%m-%Y"), :class => "span1_5 calendar_field"  %> 
				Till: <%= f.text_field :end_time, :value=>Time.now.prev_month.end_of_month.strftime("%d-%m-%Y"),  :class => "span1_5 calendar_field"  %> 
				<%= f.button :submit, "Filter Results", :class => 'btn-info x' %> <%= spinner_tag 'time_filter_spinner' %>
			</center>
		</div>
	</div>
<% end %>

<div id="chart"><%= render 'district_compliance_table' %></div>

<legend>Compliance Barchart</legend>
<div id='barchart'></div>
<%= render_chart district_compliance_bar_chart(@district, @start_time,@end_time), 'barchart' %>

<legend>Activity Timeline</legend>
<div id='graph' style='width: 1200px; height: 600px;'></div>
<%= render_chart district_activities_timeline(@district,@start_time,@end_time), 'graph' %>