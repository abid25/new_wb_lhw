<div class="page-header"> <h1>Compliance Report <small> - <%= @officer.name.titleize %></small> </h1> </div>
<br/>

<legend>Activity Table</legend>
<%= simple_form_for :time_filter, :remote => true, :html => {:"data-spinner" => "#time_filter_spinner"} do |f| %>
	<div class="inputs">
		<div class="row">
		<%=f.hidden_field :id, :value => @officer.id %>
			<center> From: <%= f.text_field :start_time, :value=>Time.now.prev_month.beginning_of_month.strftime("%d-%m-%Y"), :class => "span1_5 calendar_field"  %> 
				Till: <%= f.text_field :end_time, :value=>Time.now.prev_month.end_of_month.strftime("%d-%m-%Y"),  :class => "span1_5 calendar_field"  %> 
				<%= f.button :submit, "Filter Results", :class => 'btn-info x' %> <%= spinner_tag 'time_filter_spinner' %>
			</center>
		</div>
	</div>
<% end %>
<div class = "row"> 
	<div class="span9">
		<h4>Name: <small><%= @officer.name.titleize %></small> </h4><br/>
		<h4>District: <small> <%= @officer.district.district_name.capitalize %> </small></h4><br/>
		<h4>Tehsil: <small> ... </small></h4><br/>
		<h4>Cluster: <small> ... </small></h4><br/>
	</div>
	<div class="span3">
		<div class="well">
		<table class="table" >
			<thead>
				<th>Total</th>
				<th>Count</th>
			</thead>
			<tbody>
				<tr><td>Assessments Conducted:</td><td><div id = "assessments_count"> <%= @a_count %></div></td> </tr>
				<tr><td>Mentorings Conducted:</td><td><div id = "mentorings_count"> <%= @m_count %></div></td></tr>
				<tr><td>PD PST Attended:</td><td><div id = "pdpsts_count"> <%= @p_count %></div></td></tr>
				<tr><td>PD DTE Attended:</td><td><div id = "pddtes_count"> <%= @d_count %></div></td></tr>
				<tr><td>Activities Conducted:</td><td><strong><div id = "totals_count"><%= @a_count+@m_count+@p_count+@d_count %></div></strong></td></tr>
			</tbody>
		</table>
	</div>
	</div>
</div>

<div id="chart"><%= render 'user_compliance_table' %></div>

<legend>Activity Timeline</legend>
<div id='graph' style='width: 1200px; height: 600px;'></div>
<%= render_chart officer_activities_timeline(@officer), 'graph' %>

